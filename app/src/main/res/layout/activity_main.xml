<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chess_bgm3"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/chessBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:columnCount="8"
        android:rowCount="8"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/btnExit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Back to Menu"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chess Satyam Edition"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Game Mode Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Player"
            android:textColor="#CCCCCC"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Player Color Selection -->
        <RadioGroup
            android:id="@+id/rgPlayerColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbPlayAsWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play as White"
                android:textColor="@android:color/white"
                android:checked="true"
                android:buttonTint="@android:color/white"/>

            <RadioButton
                android:id="@+id/rbPlayAsBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play as Black"
                android:textColor="@android:color/white"
                android:layout_marginStart="24dp"
                android:buttonTint="@android:color/white"/>
        </RadioGroup>

        <!-- Difficulty Level Buttons -->
        <Button
            android:id="@+id/btnEasy"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Game: Easy" />

        <Button
            android:id="@+id/btnMedium"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Start Game: Medium" />

        <Button
            android:id="@+id/btnHard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Start Game: Hard" />

        <!-- Pro Mode / Beginner Mode Toggle -->
        <CheckBox
            android:id="@+id/cbProMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pro Mode (No Move Hints)"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"/>

        <!-- Separator Line -->
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#66FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Multiplayer and Exit Buttons -->
        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="2 Player (On this device)" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Exit Game" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
